<div id="header">
    <a href="/home" id="logoContainer">
        <img src="/assets/logo.png" id="logo"/>
    </a>
    <div id="newPostContainer" class="hidden">
        <button class="button" id="newPost" onclick="compose()">New Post</button>
    </div>
    <div id="profile">
        <div id="signin">
            <button onclick="window.location.href = '/login'" class="button"><%=locale.signIn%></button>
            <a href="/settings" id="noLoginSettingsLink">Settings</a></br>
        </div>
        <div id="profileDetails" class="hidden">
            <p id="welcomeMsg">Logged in as <a href="" id="myprofileLink">%username%</a></p>
            <a href="/settings" id="settingsLink">Settings</a></br>
            <a href="/signout">Sign Out</a>
        </div>
    </div>
</div>